<p id="notice"><%= notice %></p>

<h1>Wszystkie książki</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Tytuł</th>
      <th>Autor</th>
      <th>ISBN</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <td>Wypożycz
          <%= link_to 'Show', book %>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

